pipeline {
    agent any
    tools {
        maven 'maven'  // This should match the name you configured in Jenkins Global Tool Configuration
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Poojithadevops/GitOps-devops-project.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying Application..."'
            }
        }
    }
}
